{% extends '::baseTablas.html.twig' %}

{% block body -%}
    <h1>Categoria list</h1><br>
    <div id="tabla categoria">
    <table id="DataTables_Table_0" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><span>{{ entity.nombre }}</span></td>
                <td><span>{{ entity.descripcion }}<span></td>
                <td class="center ">
                <a class="btn btn-success" href="{{ path('categoria_show', { 'id': entity.id }) }}">Ver
                </a>
                <a class="btn btn-info" href="{{ path('categoria_edit', { 'id': entity.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

        <br><a class="btn btn-danger" href="{{ path('categoria_new') }}">
                Nueva Categoria
            </a>
    {% endblock %}
