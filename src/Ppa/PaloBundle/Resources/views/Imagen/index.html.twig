{% extends '::baseTablas.html.twig' %}

{% block body -%}
    <h1>Imagen list</h1>

    <table id="DataTables_Table_0" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('imagen_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('imagen_show', { 'id': entity.id }) }}">Ver</a>
                    <a class="btn btn-info" href="{{ path('imagen_edit', { 'id': entity.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-danger" href="{{ path('imagen_new') }}">
        Nueva Imagen
    </a>
    {% endblock %}
