{% extends '::baseTablas.html.twig' %}

{% block body -%}
    <h2>Editar imagen</h2>

    <form action="{{ path('imagen_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-info" type="submit">Cambiar</button>
        </p>
    </form>
        <a class="btn" href="{{ path('imagen') }}">
            Volver a la lista
        </a>
        <form action="{{ path('imagen_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger"type="submit">Borrar</button>
        </form>
{% endblock %}