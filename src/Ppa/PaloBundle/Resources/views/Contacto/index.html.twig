{% extends '::baseTablas.html.twig' %}
{% block body -%}
    <h1>Lista de Contactos</h1>

    <table id="DataTables_Table_0" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Cargo</th>
                <th>Telefono2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contacto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.cargo }}</td>
                <td>{{ entity.telefono2 }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('contacto_show', { 'id': entity.id }) }}">Ver</a>
                    <a class="btn btn-info" href="{{ path('contacto_edit', { 'id': entity.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-danger" href="{{ path('contacto_new') }}">
                Contacto Nuevo
            </a>
    {% endblock %}
