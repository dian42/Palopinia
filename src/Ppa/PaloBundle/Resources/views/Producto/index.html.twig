{% extends '::baseTablas.html.twig' %}

{% block body -%}

    <h1>Lista de Productos</h1>
    <table id="DataTables_Table_0" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Oferta</th>
                <th>Descripcion</th>
                <th>Descripcion Breve</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('producto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.oferta }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.descripcionBreve }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('producto_show', { 'id': entity.id }) }}">Ver</a>
                    <a class="btn btn-info" href="{{ path('producto_edit', { 'id': entity.id }) }}">Editar</a>
                    <a class="btn btn-success" href="{{path('imagen_new')}}">Crear Imagen</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-danger" href="{{ path('producto_new') }}">
            Nuevo Producto
        </a>
    {% endblock %}

