{% extends '::baseTablas.html.twig' %}

{% block body -%}
    <h1>Producto</h1>

    <table id="DataTables_Table_0" class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Oferta</th>
                <td>{{ entity.oferta }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
    </table>
        <a class="btn" href="{{ path('producto') }}">
            Volver a la lista
        </a><br>
        <a class="btn btn-info" href="{{ path('producto_edit', { 'id': entity.id }) }}">
            Editar
        </a>
        {{ form(delete_form) }}
{% endblock %}
