{% extends '::base.html.twig' %}



{%block body%}
        {% for item in entities %}
            <div class="box span7">
                    <div class="box-header well" data-original-title>
                            <h2><i class="icon-th"></i> {{item.nombre}}</h2>
                    </div>
                    {{ render(controller('PpaPaloBundle:Default:articulo', {'idProd': item.id } )) }}

            </div>
            
        <div class="box span4" >
                    <div class="box-header well" data-original-title>
                            <h2><i class="icon-th"></i> Precio</h2>
                    </div>
                        <div class="box-content">
                                {% if item.oferta == null %}
                                <h2 style="color:green">${{item.precio|number_format}}</h2>
                                {% else %}
                                <h2 > Precio Normal:<br><spam style="color:green">$</spam><strike style="color:red">{{item.precio|number_format}}</strike> <br>Precio Oferta:<br><spam style="font-style:italic;"></spam><spam style="color:green; font-size: 16px;"><FONT SIZE=6>${{item.oferta|number_format}}!!!!</FONT></spam></h2>
                                {% endif %}
                        </div>
        </div>

        <div class="box span4">
                    <div class="box-header well" data-original-title>
                            <h2><i class="icon-th"></i> Descripci√≥n</h2>
                    </div>
                        <div class="box-content">
                                <br> <p>{{item.descripcion|nl2br}}</p>

                        </div>
        </div>

        {% endfor %}
{% endblock %}
