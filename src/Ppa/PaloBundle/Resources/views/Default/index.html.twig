{% extends '::base.html.twig' %}

{%block body%}
	<ul>
    <li>Producto</li>
	{% for item in entitie %}

		<div class="box span3" >
			<div class="box-header well" data-original-title>
				<h2><i class="icon-th"></i> {{item.nombre}}</h2>
			</div>
			<div class="box-content">
				<div class="box-content">
					<a href="{{ path('pagproducto', {'idProd': item.id})}}"> 
						{{ render(controller('PpaPaloBundle:Default:picture', {'idProd': item.id } )) }}
						<span  id="text_card">
							<p>Precio : {{item.precio}}</p>
							<p class="clearfix">{{item.descripcionBreve}}</p>	
						</span>
					</a>
				</div>
			</div>
		</div>			



	{% endfor %}
                    </ul>
{% endblock %}
