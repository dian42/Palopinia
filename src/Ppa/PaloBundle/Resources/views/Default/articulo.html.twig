
{% set counter = 1 %}
{% for item2 in entitie %}
	{% set counter = counter + 1 %}
{% endfor %}
		
		<div id="myCarousel" class="carousel slide" height="250px">

			<!-- Indicators -->
				<!--<ol class="carousel-indicators">-->
				<!--<li data-target="#carousel-example-generic" data-slide-to="" class="active"></li>-->
			{% set counter = counter - 2 %}
			{% for i in 1..counter %}
				<!--<li data-target="#carousel-example-generic" data-slide-to="{{ i }}"></li>-->
			{% endfor %}

			<!--</ol>-->
			{% set bd = 0 %}
		<!-- Wrapper for slides -->
			<div class="carousel-inner">

				{% for item3 in entitie %}
					{% if item3.posicion == 1 %}
					    {% set bd = 1 %}
					{% endif %}
				{% endfor %}


				{% if bd == 1 %}
					{% for item2 in entitie %}
						{% if item2.posicion == 1 %}
							<div class="item active">
								<img src=" {{asset('img/')}}{{item2.id}}.{{item2.path}}" width="640" height="480">
							</div>
						{% else %}
							<div class="item">
								<img  src=" {{asset('img/')}}{{item2.id}}.{{item2.path}}" width="640" height="480">
							</div>
						{% endif %}
					{% endfor %}
				{% else %}
					{% for item2 in entitie %}
						{% if bd == 0 %}
							<div class="item active">
								<img src=" {{asset('img/')}}{{item2.id}}.{{item2.path}}" width="640" height="480">
							</div>
					    	{% set bd = 1 %}
						{% else %}
							<div class="item">
								<img  src=" {{asset('img/')}}{{item2.id}}.{{item2.path}}" width="640" height="480">
							</div>
						{% endif %}
					{% endfor %}
				{% endif %}


			</div>
				  <!-- Controls --> <!-- Carousel nav -->
<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		</div>
